syntax on
filetype on
filetype plugin on
filetype plugin indent on
 
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
 
set smartindent
set autoindent
set smarttab
 
set ignorecase
set smartcase
set incsearch
set hlsearch
 
set fileencodings=utf-8,gb18030
set backspace=indent,eol,start
set noswapfile
set mouse=a

set shell=/bin/bash
